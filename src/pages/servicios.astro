---
import SecondaryButton from "@/components/SecondaryButton.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import Button from "@/components/Button.astro";
import { PHONE_NUMBER } from "astro:env/server";

const services = await getCollection("servicios");
---

<Layout
  canonical={"/servicios"}
  title={"Expertos en Colocación de Cerramientos y Alambrados"}
  description={"Colocación profesional de Cerramientos y Alambrados. Especialistas en cerramientos metálicos, cercos perimetrales, cerramientos de jardín y alambrados de todo tipo."}
>
  <section
    class="rounded-xl w-full my-7 grid grid-cols-1 md:grid-cols-2 bg-white overflow-hidden"
  >
    <article
      class="h-[350px] p-2 py-7 col-span-1 md:col-span-1 flex flex-col justify-center items-center gap-4"
    >
      <h1 class="text-black text-4xl font-semibold text-center">
        Instalaccion de<span class="text-red-400"> Cerramientos</span> y
        <span class="text-red-400">Alambrados</span>
      </h1>
      <p class="text-lg text-slate-500">Consultanos sin cargo</p>
      <div class="flex flex-row flex-wrap-reverse justify-between gap-2">
        <SecondaryButton
          hrf={"https://maps.google.com/maps/dir//Rodr%C3%ADguez+Pena+17+B1640IFN+Mart%C3%ADnez+Provincia+de+Buenos+Aires/@-34.4888325,-58.5014936,16z/data=!4m5!4m4!1m0!1m2!1m1!1s0x95bcb1a91344c903:0xce6153a3b2a72518"}
          target={"_blank"}>Visitanos</SecondaryButton
        >
        <Button
          hrf={`https://api.whatsapp.com/send?phone=${PHONE_NUMBER}&text=Hola, quería hacer una consulta sobre: `}
          >Consultanos</Button
        >
      </div>
    </article>
    <article class="relative col-span-1 h-[350px]">
      <div
        class="absolute inset-0 bg-[url('/images/alambre6.webp')] bg-cover bg-center [mask-image:linear-gradient(transparent,black_50%)] md:[mask-image:linear-gradient(to_right,transparent,black_50%)]"
      >
      </div>
    </article>
  </section>
  <section class="grid grid-cols-1 md:grid-cols-2 bg-transparent gap-4 p-5">
    {
      services.map((service) => (
        <article class="col-span-1 mx-auto min-w-[300px] max-w-[450px] min-h-[150px] rounded-lg bg-white p-3 border-[1px] border-red-200">
          <div class="flex items-center justify-start m-1 gap-1">
            <span class="rounded-full bg-red-200 p-2.5">
              <p>{service.data.icon}</p>
            </span>
            <h2 class="text-xl font-semibold">{service.data.title}</h2>
          </div>
          <p class="text-pretty m-1">{service.data.description}</p>
        </article>
      ))
    }
  </section>
</Layout>
