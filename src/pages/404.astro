---
import SecondaryButton from "@/components/SecondaryButton.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title={"404 "}
  description={"Página no encontrada en La Velada del Año V. Vuelve al inicio para seguir viendo cerramientos y alambrados."}
  canonical={"/404"}
>
  <section class="flex flex-col justify-center items-center h-full p-5">
    <h1 class="text-red-400 text-pretty">
      <span
        class="mb-10 w-fit mx-auto block text-[120px] font-bold tracking-[.025em]"
        aria-hidden="true"
      >
        404
      </span>
      <span class="mb-4 block text-4xl font-bold tracking-wider"
        >Cerramiento no encontrado</span
      >
    </h1>

    <SecondaryButton hrf="https://www.alambradosmelillo.com.ar/" target="_self">
      Volver al inicio
    </SecondaryButton>
  </section>
</Layout>
